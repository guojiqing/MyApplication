<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="WelcomeBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="WelcomeBase.Rel">
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <style name="WelcomeButton" parent="WelcomeBase">

        <item name="android:background">@drawable/welcome_btn_selector</item>
        <item name="android:layout_marginBottom">80dp</item>
    </style>

</resources>
